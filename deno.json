{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.3.2/",
    "tailwindcss": "https://deno.land/x/tailwindcss@3.4.13/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A - --src=src",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": ["lume/types.ts"]
  }
}
